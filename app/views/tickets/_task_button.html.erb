<% if task.status  == "accepted" %>

<% if task.user == current_user %>

        <!-- Single button -->
        <div class="btn-group">
          <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown">
            Accepted <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to "Complete", task_action_path(task_id: task.id, id: @ticket.id, task_action: "completed"), method: :put %></li>
            <li class="divider"></li>
            <li><%= link_to "Cancel", task_action_path(task_id: task.id, id: @ticket.id, task_action: "canceled"), method: :put %></li>
          </ul>
        </div>

  <% else %>
        <button class="btn btn-info">
        <%= task.status.titleize %>
        </button>
  <% end %>
<% elsif task.status == "assigned" %>


  <% if task.user == current_user %>

	<!-- Single button -->
	<div class="btn-group">
	  <button type="button" class="btn btn-warning dropdown-toggle" data-toggle="dropdown">
	    Assigned <span class="caret"></span>
	  </button>
	  <ul class="dropdown-menu" role="menu">
	    <li><%= link_to "Accept", task_action_path(task_id: task.id, id: @ticket.id, task_action: "accepted"), method: :put %></li>
	    <li class="divider"></li>
	    <li><%= link_to "Cancel", task_action_path(task_id: task.id, id: @ticket.id, task_action: "canceled"), method: :put %></li>
	  </ul>
	</div>

  <% else %>
        <button class="btn btn-warning">
        <%= task.status.titleize %>
        </button>
  <% end %>
<% elsif task.status == "completed" %>
        <button class="btn btn-success">
        <%= task.status.titleize %>
        </button>

<% elsif task.status == "canceled" %>
        <button class="btn btn-danger">
        <%= task.status.titleize %>
        </button>



<% else %>
        <%= task.status %>
<% end %>

