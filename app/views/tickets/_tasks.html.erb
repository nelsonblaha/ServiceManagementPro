<% unless @ticket.tasks.empty? %>
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-primary">
      <div class="panel-heading" style="width:100%; padding-top:20px">
        <h3> Tasks </h3>
      </div>
      <div class="panel-body" style="width:100%">
        <table class="table">
          <thead>
            <tr>
              <th>User</th>
              <th>Status</th>
              <th>Notification</th>
            </tr>
          </thead>

          <tbody>
            <% @tasks.each do |task| %>
              <tr>
                <td><%= task.user.netid %></td>
                <td><%= render partial: 'task_button', locals: {task: task} %></td>
                <td><%= task.notification %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% end %>

